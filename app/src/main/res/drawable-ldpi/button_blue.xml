<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/wfp_azure1" />
            <stroke
                android:width="1dp"
                android:color="@color/wfp_azure1" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/wfp_azure1"
                android:centerColor="@color/wfp_azure2"
                android:endColor="@color/wfp_azure1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/wfp_azure1" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
</selector>
